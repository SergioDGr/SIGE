<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Permiso para el modelo Empresa-->
        <record model="ir.model.access" id="access_admin_empresa">
            <field name="name">Access Empresa Administrador</field>
            <field name="model_id" ref="model_instituto_empresa"/>
            <field name="group_id" ref="group_administrador"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>
        <record model="ir.model.access" id="access_profesor_clase">
            <field name="name">Access Clase Profesor</field>
            <field name="model_id" ref="model_instituto_empresa"/>
            <field name="group_id" ref="group_empresa"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>
        <record model="ir.model.access" id="access_alumno_empresa">
            <field name="name">Access Clase Estudiante</field>
            <field name="model_id" ref="model_instituto_empresa"/>
            <field name="group_id" ref="group_empresa"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>
    </data>
</odoo>
