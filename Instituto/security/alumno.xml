<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Permiso para el modelo Estudiante-->
        <record model="ir.model.access" id="access_admin_alumno">
            <field name="name">Access Alumno Administrador</field>
            <field name="model_id" ref="model_gestor_estudiante"/>
            <field name="group_id" ref="group_administrador"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>
        <record model="ir.model.access" id="access_empresa_alumno">
            <field name="name">Access Alumno Profesor</field>
            <field name="model_id" ref="model_gestor_estudiante"/>
            <field name="group_id" ref="group_profesor"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>
        <record model="ir.model.access" id="access_alumno_alumno">
            <field name="name">Access Alumno Alumno</field>
            <field name="model_id" ref="model_gestor_estudiante"/>
            <field name="group_id" ref="group_alumno"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>
    </data>
</odoo>