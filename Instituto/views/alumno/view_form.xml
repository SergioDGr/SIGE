<odoo>
    <!-- Vista de Formulario para Alumno -->
    <record model="ir.ui.view" id="view_alumno_form">
        <field name="name">alumno.ver.form</field>
        <field name="model">instituto.alumno</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="abrir_formulario" string="Abrir Formulario" type="object"/>
                </header>
                <sheet>
                    <group>
                        <field name="nombre"/>
                        <field name="apellidos"/>
                        <field name="fecha_nacimiento"/>
                        <field name="direccion"/>
                        <field name="codigo_postal"/>
                        <field name="email"/>
                        <field name="ciclo_formativo"/>
                        <field name="coche"/>
                        <field name="otros"/>
                        <field name="nota_media"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>