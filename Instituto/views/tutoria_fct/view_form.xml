<odoo>
    <!-- Vista de Formulario para Tutoria FCT -->
    <record model="ir.ui.view" id="view_tutoria_fct_form">
        <field name="name">turoria_fct.ver.form</field>
        <field name="model">instituto.tutoria_fct</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="tutor"/>
                        <field name="email"/>
                        <field name="telefono"/>
                        <field name="alumnos"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>